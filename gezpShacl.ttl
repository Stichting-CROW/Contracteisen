@prefix gezp: 		<http://ontologie.crow.nl/gezichtspunten/>.
@prefix cspec: 		<http://ontologie.crow.nl/bibliotheekspecificatie/201711/>.
@prefix cdoc: 		<http://ontologie.crow.nl/document/201711/>.

@prefix dct:		<http://purl.org/dc/terms/>.
@prefix owl:		<http://www.w3.org/2002/07/owl#>.
@prefix rdf:		<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:		<http://www.w3.org/2000/01/rdf-schema#>.
@prefix sh:			<http://www.w3.org/ns/shacl#>.
@prefix skos:		<http://www.w3.org/2004/02/skos/core#>.
@prefix spin:		<http://spinrdf.org/spin#>.
@prefix xsd:		<http://www.w3.org/2001/XMLSchema#>.

@prefix modelgezp:		<http://ontologie.crow.nl/model/gezp/201711/>.

#======================
# NodeShapes
#======================

modelgezp:Categorie rdf:type sh:NodeShape;
  rdfs:label "Categorie"@nl;
  rdfs:comment "Een dataset die geselecteerd kan worden in de viewer."@nl;
  sh:targetClass gezp:Categorie;
  sh:property modelgezp:label;
  sh:property modelgezp:startsWith;
.

modelgezp:Node rdf:type sh:NodeShape;
  rdfs:label "Node"@nl;
  rdfs:comment "Een plaatshouder voor de lamellen uit de kennisbank."@nl;
  sh:targetClass gezp:Node;
  sh:property modelgezp:label;
  sh:property modelgezp:hasChild;
  sh:property modelgezp:hasParent;
  sh:property modelgezp:isMemberOf;
  sh:property modelgezp:isStartingPointFor;
  sh:property modelgezp:presents;
.

#====================
# PropertyShapes Owl:ObjectProperties
#====================

modelgezp:label rdf:type sh:PropertyShape;
  rdfs:label "label"@nl;
  rdfs:comment "Het label wat wordt meegegeven aan een Categorie"@nl;
  sh:path rdfs:label;
  sh:minCount 1;
  sh:maxCount 1; 
  sh:severity sh:Violation;
  sh:message "Er dient één label aan een Categorie gekoppeld te zijn"@nl;
.
modelgezp:hasChild rdf:type sh:Properyshape;
  rdfs:label "has child"@en;
  rdfs:comment "Deze relatie geeft aan dat een Node een onderliggende Node heeft."@nl;
  sh:path gezp:hasChild;
  sh:class gezp:Node;
.  

modelgezp:hasParent rdf:type sh:PropertyShape;
  rdfs:label "has parent"@en;
  rdfs:comment "Deze relatie geeft aan dat een Node een bovenliggende Node heeft."@nl;
  sh:path gezp:hasParent;
  sh:class gezp:Node;
  sh:maxCount 1;
  sh:severity sh:Violation;
  sh:message "Een Node mag maar één verwijzing hebben naar een bovenliggende Node"@nl;
.

modelgezp:isMemberOf rdf:type sh:PropertyShape;
  rdfs:label "is memeber of"@en;
  rdfs:comment "Deze relatie geeft aan dat de Node aan een categorie behoort."@nl;
  sh:path gezp:isMemberOf;
  sh:class gezp:Categorie;
.

modelgezp:isPresentedBy rdf:type sh:PropertyShape;
  rdfs:label "is presented by"@en;
  rdfs:comment "Deze relatie geeft aan welke node naar de specificatie wijst."@nl;
  sh:path gezp:isPresentedBy;
  sh:class gezp:Node;
.

modelgezp:isStartingPointFor rdf:type sh:PropertyShape;
  rdfs:label "is starting point for"@en;
  rdfs:comment "Deze relatie geeft de hoofd-Node aan waarmee de boomstructuur begint"@nl;
  sh:path gezp:isStartingPointFor;
  sh:class gezp:Categorie;
.

modelgezp:presents rdf:type sh:PropertyShape;
  rdfs:label "presents"@en;
  rdfs:comment "Deze relatie geeft aan welke specificatie een Node naar wijst"@nl;
  sh:path gezp:presents;
  sh:class cspec:Specificatie;
.

modelgezp:recursive rdf:type sh:PropertyShape;
  rdfs:label "recursive"@en;
  rdfs:comment "Dit element geeft aan of de Content recursief gepresenteerd dient te worden"@nl;
  sh:path gezp:recursive;
  sh:datatype xsd:boolean;
.

modelgezp:startsWith rdf:type sh:PropertyShape;
  rdfs:label "starts with"@en;
  rdfs:comment "Deze relatie geeft de hoofd-Node aan waarmee de boomstructuur begint"@nl;
  sh:path gezp:startsWith;
  sh:class gezp:Node;
  sh:minCount 1;
  sh:maxCount 1;
  sh:severity sh:Violation;
  sh:message "Een hoofd-Node, dient altijd aangegeven te worden voor een Categorie"@nl;
.

